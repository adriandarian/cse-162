<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editAccelerometerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accelerometerTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/accelerometerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Linear Acceleration" />

    <EditText
        android:id="@+id/editGravityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gravityTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/gravityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="10dp"
        android:text="Gravity" />
</RelativeLayout>